{
  "name": "express-mysql-login",
  "version": "1.0.0",
  "description": "Node.js authentication with Passport and MySQL db",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "test": "jest --watchAll --verbose --runInBand",
